{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "jsx": "react-jsx",
    "typeRoots": ["../../node_modules/@types"],
    "baseUrl": ".",
    "rootDir": "./src"
  },
  "compileOnSave": true,
  "include": ["src"]
}